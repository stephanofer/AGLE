---
import { email, emailLink, phoneLink, phoneNumber } from "@/const/links";

import Paper from "@/assets/svg/Paper.svg";
import CallPhone from "@/assets/svg/CallPhone.svg";
import Email from "@/assets/svg/Email.svg";
---

<div class="contact-wrapper">
  <!-- Header con diseño moderno -->
  <div class="contact-header">
    <span class="location-badge">Lima, Perú</span>
    <h1 class="contact-title">¿Necesitas ayuda?</h1>
    <div class="subtitle-box">
      <p class="contact-subtitle">
        Revisa nuestro apartado de <strong>preguntas frecuentes</strong> o escríbenos directamente a
        <a href="mailto:info@muebleslife.com" class="email-highlight">{email}</a>
      </p>
    </div>
  </div>

  <!-- Grid principal invertido -->
  <div class="contact-grid">
    <!-- Info cards a la izquierda -->
    <div class="info-section">
      <div class="info-card primary-card">
        <div class="card-header">
          <div class="icon-wrapper">
            <Email width="28" height="28" />
          </div>
          <h3 class="card-title">Escríbenos</h3>
        </div>
        <div class="card-body">
          <a href={emailLink} class="contact-link large">{email}</a>
          <p class="card-description">Respuesta en menos de 24 horas</p>
        </div>
      </div>

      <div class="info-card">
        <div class="card-header">
          <div class="icon-wrapper">
            <CallPhone width="28" height="28" />
          </div>
          <h3 class="card-title">Llámanos</h3>
        </div>
        <div class="card-body">
          <a href={phoneLink} class="contact-link large phone-number">{phoneNumber}</a>
          <div class="schedule-grid">
            <div class="schedule-item">
              <span class="schedule-label">Lunes a Viernes</span>
              <span class="schedule-time">10:00 - 17:00 h</span>
            </div>
            <div class="schedule-item">
              <span class="schedule-label">Sábados</span>
              <span class="schedule-time">10:00 - 13:00 h</span>
            </div>
          </div>
          <div class="schedule-alert">
            <strong>Horario Agosto:</strong>
            <span>L-V 09:00-16:00 h · Sábados cerrado</span>
          </div>
        </div>
      </div>

      <div class="info-card">
        <div class="card-header">
          <div class="icon-wrapper">
            <Paper width="28" height="28" />
          </div>
          <h3 class="card-title">Colaboraciones</h3>
        </div>
        <div class="card-body">
          <p class="card-label">Prensa:</p>
          <a href="mailto:marketing@muebleslife.com" class="contact-link">
            marketing@muebleslife.com
          </a>
          <p class="card-label" style="margin-top: 1rem;">Colaboraciones:</p>
          <a href="#" class="contact-link underlined">Rellena este formulario →</a>
        </div>
      </div>
    </div>

    <!-- Mapa a la derecha -->
    <div class="map-section">
      <div class="map-container">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2906.8!2d-2.0!3d43.0!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDPCsDAwJzAwLjAiTiAywrAwMCcwMC4wIlc!5e0!3m2!1ses!2ses!4v1234567890"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación de ARM CORPORATION"
        ></iframe>
      </div>
      <div class="map-label">Nuestra ubicación</div>
    </div>
  </div>
</div>

<style>
  .contact-wrapper {
    max-width: 1300px;
    margin: 0 auto;
    padding: 5rem 2rem 4rem;
  }

  /* Header */
  .contact-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
  }

  .location-badge {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-text-light);
    background: rgba(0, 0, 0, 0.04);
    padding: 0.5rem 1.25rem;
    border-radius: 50px;
    margin-bottom: 1.5rem;
  }

  .contact-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    color: var(--color-text);
    margin: 0 0 2rem 0;
    font-family: var(--font-primary);
  }

  .subtitle-box {
    max-width: 700px;
    margin: 0 auto;
  }

  .contact-subtitle {
    font-size: clamp(1rem, 2vw, 1.15rem);
    line-height: 1.6;
    color: var(--color-text-light);
    margin: 0;
  }

  .contact-subtitle strong {
    color: var(--color-text);
    font-weight: 500;
  }

  .email-highlight {
    color: var(--color-text);
    font-weight: 500;
    text-decoration: underline;
    transition: opacity 0.2s;
  }

  .email-highlight:hover {
    opacity: 0.7;
  }

  /* Grid principal */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 3rem;
    align-items: start;
  }

  /* Info Section */
  .info-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .info-card {
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid white;
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .info-card:hover {
    border-color: var(--color-text);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  .primary-card {
    background: rgba(0, 0, 0, 0.02);
    border-color: var(--color-text);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .icon-wrapper {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border-radius: 10px;
    color: var(--color-text);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .card-title {
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: 500;
    color: var(--color-text);
    margin: 0;
    font-family: var(--font-primary);
  }

  .card-body {
    padding-left: 0;
  }

  .contact-link {
    display: inline-block;
    font-size: clamp(0.95rem, 1.5vw, 1.05rem);
    color: var(--color-text-light);
    transition: color 0.2s;
    text-decoration: none;
  }

  .contact-link:hover {
    color: var(--color-text);
  }

  .contact-link.large {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .contact-link.underlined {
    text-decoration: underline;
  }

  .phone-number {
    letter-spacing: 0.02em;
  }

  .card-description {
    font-size: 0.9rem;
    color: var(--color-text-light);
    margin: 0.5rem 0 0 0;
    font-style: italic;
  }

  .card-label {
    font-size: 0.9rem;
    color: var(--color-text);
    font-weight: 500;
    margin: 0 0 0.5rem 0;
  }

  /* Schedule Grid */
  .schedule-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 1rem 0;
  }

  .schedule-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .schedule-label {
    font-size: 0.85rem;
    color: var(--color-text-light);
    font-weight: 500;
  }

  .schedule-time {
    font-size: 0.95rem;
    color: var(--color-text);
  }

  .schedule-alert {
    background: rgba(0, 0, 0, 0.04);
    padding: 0.75rem 1rem;
    border-radius: 6px;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--color-text);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .schedule-alert strong {
    font-weight: 500;
  }

  /* Map Section */
  .map-section {
    position: sticky;
    top: 2rem;
  }

  .map-container {
    width: 100%;
    height: 550px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .map-label {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--color-text-light);
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .contact-wrapper {
      padding: 4rem 1.5rem 3rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .map-section {
      position: static;
      order: -1;
    }

    .map-container {
      height: 400px;
    }
  }

  @media (max-width: 768px) {
    .contact-wrapper {
      padding: 3rem 1.25rem 2.5rem;
    }

    .contact-header {
      margin-bottom: 2.5rem;
    }

    .location-badge {
      font-size: 0.75rem;
      padding: 0.4rem 1rem;
      margin-bottom: 1rem;
    }

    .contact-title {
      margin-bottom: 1.5rem;
    }

    .contact-grid {
      gap: 2rem;
    }

    .info-section {
      gap: 1.25rem;
    }

    .info-card {
      padding: 1.5rem;
    }

    .card-header {
      gap: 0.75rem;
      margin-bottom: 1.25rem;
    }

    .icon-wrapper {
      width: 42px;
      height: 42px;
    }

    .schedule-grid {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .map-container {
      height: 350px;
    }
  }

  @media (max-width: 480px) {
    .contact-wrapper {
      padding: 2.5rem 1rem 2rem;
    }

    .contact-header {
      margin-bottom: 2rem;
    }

    .contact-subtitle {
      font-size: 0.95rem;
    }

    .info-card {
      padding: 1.25rem;
    }

    .card-header {
      flex-direction: row;
      gap: 0.75rem;
    }

    .icon-wrapper {
      width: 38px;
      height: 38px;
    }

    .contact-link.large {
      font-size: 1.05rem;
    }

    .schedule-alert {
      padding: 0.65rem 0.85rem;
      font-size: 0.85rem;
    }

    .map-container {
      height: 300px;
    }
  }
</style>