---
import { email, emailLink, phoneLink, phoneNumber } from "@/const/links";

import Paper from "@/assets/svg/Paper.svg";
import CallPhone from "@/assets/svg/CallPhone.svg";
import Email from "@/assets/svg/Email.svg";
---

<div class="contact-wrapper">
  <!-- Header con diseño mejorado -->
  <div class="contact-header">
    <span class="location-badge">Lima, Perú</span>
    <h1 class="contact-title">¿Necesitas ayuda?</h1>
    <div class="subtitle-box">
      <p class="contact-subtitle">
        Revisa nuestro apartado de <strong>preguntas frecuentes</strong> o escríbenos directamente a
        <a href="mailto:info@muebleslife.com" class="email-highlight">{email}</a>
      </p>
    </div>
  </div>

  <!-- Grid principal -->
  <div class="contact-grid">
    <!-- Info cards -->
    <div class="info-section">
      <div class="info-card primary-card">
        <div class="card-header">
          <div class="icon-wrapper">
            <Email width="24" height="24" />
          </div>
          <h3 class="card-title">Escríbenos</h3>
        </div>
        <div class="card-body">
          <a href={emailLink} class="contact-link large">{email}</a>
          <p class="card-description">Respuesta en menos de 24 horas</p>
        </div>
      </div>

      <div class="info-card">
        <div class="card-header">
          <div class="icon-wrapper">
            <CallPhone width="24" height="24" />
          </div>
          <h3 class="card-title">Llámanos</h3>
        </div>
        <div class="card-body">
          <a href={phoneLink} class="contact-link large phone-number">{phoneNumber}</a>
          <div class="schedule-grid">
            <div class="schedule-item">
              <span class="schedule-label">Lunes a Viernes</span>
              <span class="schedule-time">10:00 - 17:00 h</span>
            </div>
            <div class="schedule-item">
              <span class="schedule-label">Sábados</span>
              <span class="schedule-time">10:00 - 13:00 h</span>
            </div>
          </div>
          <div class="schedule-alert">
            <strong>Horario Agosto:</strong>
            <span>L-V 09:00-16:00 h · Sábados cerrado</span>
          </div>
        </div>
      </div>

      <div class="info-card">
        <div class="card-header">
          <div class="icon-wrapper">
            <Paper width="24" height="24" />
          </div>
          <h3 class="card-title">Colaboraciones</h3>
        </div>
        <div class="card-body">
          <p class="card-label">Prensa:</p>
          <a href="mailto:marketing@muebleslife.com" class="contact-link">
            marketing@muebleslife.com
          </a>
          <p class="card-label" style="margin-top: 1rem;">Colaboraciones:</p>
          <a href="#" class="contact-link underlined">
            Rellena este formulario
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Mapa -->
    <div class="map-section">
      <div class="map-container">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2906.8!2d-2.0!3d43.0!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDPCsDAwJzAwLjAiTiAywrAwMCcwMC4wIlc!5e0!3m2!1ses!2ses!4v1234567890"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación de AGLE CORPORATION"
        ></iframe>
      </div>
      <div class="map-label">Nuestra ubicación</div>
    </div>
  </div>
</div>

<style>
  .contact-wrapper {
    max-width: 1300px;
    margin: 0 auto;
    padding: var(--space-section) var(--space-lg);
  }

  /* Header */
  .contact-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    position: relative;
  }

  .location-badge {
    display: inline-block;
    font-size: var(--fs-xs);
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-primary);
    background: var(--color-primary-subtle);
    padding: 0.5rem 1.25rem;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-md);
  }

  .contact-title {
    font-size: var(--fs-4xl);
    font-weight: 600;
    line-height: 1.1;
    color: var(--color-text);
    margin: 0 0 var(--space-lg) 0;
    font-family: var(--font-primary);
  }

  .subtitle-box {
    max-width: 700px;
    margin: 0 auto;
  }

  .contact-subtitle {
    font-size: var(--fs-md);
    line-height: 1.6;
    color: var(--color-text-light);
    margin: 0;
  }

  .contact-subtitle strong {
    color: var(--color-text);
    font-weight: 500;
  }

  .email-highlight {
    color: var(--color-primary);
    font-weight: 500;
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .email-highlight:hover {
    opacity: 0.8;
  }

  /* Grid principal */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: var(--space-xl);
    align-items: start;
  }

  /* Info Section */
  .info-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .info-card {
    background: var(--color-bg-soft);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    transition: all var(--transition-base);
  }

  .info-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-glow);
    transform: translateY(-2px);
  }

  .primary-card {
    border-color: var(--color-primary);
    background: var(--color-primary-subtle);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .icon-wrapper {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-muted);
    border-radius: var(--radius-md);
    color: var(--color-primary);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .info-card:hover .icon-wrapper {
    background: var(--color-primary);
    color: white;
  }

  .card-title {
    font-size: var(--fs-lg);
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    font-family: var(--font-primary);
  }

  .card-body {
    padding-left: 0;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--fs-base);
    color: var(--color-text-light);
    transition: color var(--transition-fast);
    text-decoration: none;
  }

  .contact-link:hover {
    color: var(--color-primary);
  }

  .contact-link.large {
    font-size: var(--fs-lg);
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: var(--space-xs);
  }

  .contact-link.underlined {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .contact-link svg {
    transition: transform var(--transition-fast);
  }

  .contact-link:hover svg {
    transform: translateX(4px);
  }

  .phone-number {
    letter-spacing: 0.02em;
  }

  .card-description {
    font-size: var(--fs-sm);
    color: var(--color-text-light);
    margin: var(--space-xs) 0 0 0;
    font-style: italic;
  }

  .card-label {
    font-size: var(--fs-sm);
    color: var(--color-text);
    font-weight: 500;
    margin: 0 0 var(--space-xs) 0;
  }

  /* Schedule Grid */
  .schedule-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-sm);
    margin: var(--space-sm) 0;
  }

  .schedule-item {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .schedule-label {
    font-size: var(--fs-xs);
    color: var(--color-text-light);
    font-weight: 500;
  }

  .schedule-time {
    font-size: var(--fs-sm);
    color: var(--color-text);
  }

  .schedule-alert {
    background: var(--color-bg-muted);
    padding: var(--space-sm);
    border-radius: var(--radius-sm);
    margin-top: var(--space-sm);
    font-size: var(--fs-sm);
    color: var(--color-text-light);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    border: 1px solid var(--color-border);
  }

  .schedule-alert strong {
    font-weight: 600;
    color: var(--color-text);
  }

  /* Map Section */
  .map-section {
    position: sticky;
    top: var(--space-lg);
  }

  .map-container {
    width: 100%;
    height: 550px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--color-bg-soft);
    border: 1px solid var(--color-border);
  }

  .map-label {
    text-align: center;
    margin-top: var(--space-sm);
    font-size: var(--fs-sm);
    color: var(--color-text-light);
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .contact-wrapper {
      padding: var(--space-xl) var(--space-md);
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .map-section {
      position: static;
      order: -1;
    }

    .map-container {
      height: 400px;
    }
  }

  @media (max-width: 768px) {
    .contact-wrapper {
      padding: var(--space-xl) var(--space-md);
    }

    .contact-header {
      margin-bottom: var(--space-lg);
    }

    .contact-grid {
      gap: var(--space-md);
    }

    .info-section {
      gap: var(--space-sm);
    }

    .info-card {
      padding: var(--space-md);
    }

    .card-header {
      gap: var(--space-xs);
      margin-bottom: var(--space-sm);
    }

    .icon-wrapper {
      width: 40px;
      height: 40px;
    }

    .schedule-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xs);
    }

    .map-container {
      height: 350px;
    }
  }

  @media (max-width: 480px) {
    .contact-wrapper {
      padding: var(--space-lg) var(--space-sm);
    }

    .contact-header {
      margin-bottom: var(--space-md);
    }

    .info-card {
      padding: var(--space-sm);
    }

    .card-header {
      flex-direction: row;
      gap: var(--space-xs);
    }

    .icon-wrapper {
      width: 36px;
      height: 36px;
    }

    .schedule-alert {
      padding: var(--space-xs);
    }

    .map-container {
      height: 280px;
    }
  }
</style>