---
import SectionContainer from "@/components/SectionContainer.astro";
---

<SectionContainer id="brands" class="mt-4">
  <div class="brands-wrapper">
    <!-- Header con mejor jerarquía -->
    <div class="brands-header">
      <span class="brands-label">Nuestros Socios</span>
      <h2 class="brands-title">Marcas con las que trabajamos</h2>
      <p class="brands-description">
        Productos de calidad respaldados por marcas líderes en el mercado
      </p>
    </div>

    <!-- Grid de marcas con diseño mejorado -->
    <div class="brands-grid">
      <div class="brand-item">
        <img src="/favicon.svg" alt="Redragon" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="HyperX" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="VSG" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Logitech" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Razer" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Fifine" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Royal Kludge" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="T-Dagger" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Astro" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Streamplify" class="brand-logo" />
      </div>
    </div>
  </div>
</SectionContainer>

<style>
  .brands-wrapper {
    max-width: 1100px;
    margin: 0 auto;
    padding: var(--space-section) var(--space-lg);
  }

  /* Header mejorado con jerarquía clara */
  .brands-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .brands-label {
    display: inline-block;
    font-size: var(--fs-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .brands-title {
    font-size: var(--fs-3xl);
    font-weight: 450;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0 0 var(--space-sm) 0;
    font-family: var(--font-primary);
  }

  .brands-description {
    font-size: var(--fs-md);
    line-height: 1.6;
    color: var(--color-text-light);
    margin: 0;
  }

  /* Grid con cards oscuras para coherencia */
  .brands-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--space-md);
  }

  .brand-item {
    background: var(--color-bg-soft);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-lg) var(--space-md);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100px;
    transition: all var(--transition-base);
  }

  .brand-item:hover {
    border-color: var(--color-primary);
    background: var(--color-bg-muted);
    transform: translateY(-4px);
    box-shadow: var(--shadow-glow);
  }

  .brand-logo {
    max-width: 90px;
    max-height: 45px;
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: grayscale(100%) brightness(0.6);
    opacity: 0.6;
    transition: all var(--transition-base);
  }

  .brand-item:hover .brand-logo {
    filter: grayscale(0%) brightness(1);
    opacity: 1;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .brands-wrapper {
      padding: var(--space-xl) var(--space-md);
    }

    .brands-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-sm);
    }

    .brand-item:nth-child(n + 9) {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .brands-wrapper {
      padding: var(--space-xl) var(--space-md);
    }

    .brands-header {
      margin-bottom: var(--space-lg);
    }

    .brands-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-sm);
    }

    .brand-item {
      padding: var(--space-md) var(--space-sm);
      min-height: 85px;
    }

    .brand-item:nth-child(n + 7) {
      display: none;
    }

    .brand-logo {
      max-width: 80px;
      max-height: 40px;
    }
  }

  @media (max-width: 480px) {
    .brands-wrapper {
      padding: var(--space-lg) var(--space-sm);
    }

    .brands-header {
      margin-bottom: var(--space-md);
    }

    .brands-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-xs);
    }

    .brand-item {
      padding: var(--space-sm);
      min-height: 75px;
    }

    .brand-logo {
      max-width: 70px;
      max-height: 35px;
    }
  }
</style>