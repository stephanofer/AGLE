---
import SectionContainer from "@/components/SectionContainer.astro";
---

<SectionContainer id="brands" class="mt-4">
  <div class="brands-wrapper">
    <!-- Header compacto -->
    <div class="brands-header">
      <h2 class="brands-title">Marcas con las que trabajamos</h2>
      <p class="brands-description">
        Productos de calidad respaldados por marcas l√≠deres
      </p>
    </div>

    <!-- Grid compacto de marcas -->
    <div class="brands-grid">
      <div class="brand-item">
        <img src="/favicon.svg" alt="Redragon" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="HyperX" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="VSG" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Logitech" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Razer" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Fifine" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Royal Kludge" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="T-Dagger" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Astro" class="brand-logo" />
      </div>

      <div class="brand-item">
        <img src="/favicon.svg" alt="Streamplify" class="brand-logo" />
      </div>
    </div>
  </div>
</SectionContainer>

<style>
  .brands-wrapper {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  /* Header compacto y centrado */
  .brands-header {
    text-align: center;
    margin-bottom: 3rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .brands-title {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 500;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
    font-family: var(--font-primary);
  }

  .brands-description {
    font-size: clamp(0.95rem, 1.5vw, 1.05rem);
    line-height: 1.5;
    color: var(--color-text);
    opacity: 0.7;
    margin: 0;
  }

  /* Grid compacto */
  .brands-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1.25rem;
  }

  .brand-item {
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    padding: 1.75rem 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100px;
    transition: all 0.3s ease;
  }

  .brand-item:hover {
    border-color: var(--color-secondary);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  .brand-logo {
    max-width: 100px;
    max-height: 50px;
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: grayscale(100%);
    opacity: 0.5;
    transition: all 0.3s ease;
  }

  .brand-item:hover .brand-logo {
    filter: grayscale(0%);
    opacity: 1;
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .brands-wrapper {
      padding: 2.5rem 1.5rem;
    }

    .brands-header {
      margin-bottom: 2.5rem;
    }

    .brands-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
    }

    .brand-item:nth-child(n + 9) {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .brands-wrapper {
      padding: 2rem 1.25rem;
    }

    .brands-header {
      margin-bottom: 2rem;
    }

    .brands-title {
      font-size: 1.75rem;
    }

    .brands-description {
      font-size: 0.9rem;
    }

    .brands-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.875rem;
    }

    .brand-item {
      padding: 1.5rem 1rem;
      min-height: 90px;
    }

    .brand-item:nth-child(n + 7) {
      display: none;
    }

    .brand-logo {
      max-width: 85px;
      max-height: 42px;
    }
  }

  @media (max-width: 480px) {
    .brands-wrapper {
      padding: 1.75rem 1rem;
    }

    .brands-header {
      margin-bottom: 1.75rem;
    }

    .brands-title {
      font-size: 1.5rem;
    }

    .brands-description {
      font-size: 0.85rem;
    }

    .brands-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }

    .brand-item {
      padding: 1.25rem 0.875rem;
      min-height: 80px;
    }

    .brand-logo {
      max-width: 75px;
      max-height: 38px;
    }
  }
</style>