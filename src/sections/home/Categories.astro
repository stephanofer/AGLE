---
import SectionContainer from "@/components/SectionContainer.astro";

const categories = [
  {
    name: "Dormitorio",
    image:
      "https://images.unsplash.com/photo-1616594039964-ae9021a400a0?w=800&q=80",
    link: "/categorias/dormitorio",
  },
  {
    name: "Montessori",
    image:
      "https://images.unsplash.com/photo-1631889993959-41b4e9c6e3c5?w=800&q=80",
    link: "/categorias/montessori",
  },
  {
    name: "Comedor",
    image:
      "https://images.unsplash.com/photo-1615874959474-d609969a20ed?w=800&q=80",
    link: "/categorias/comedor",
  },
  {
    name: "Exterior",
    image:
      "https://images.unsplash.com/photo-1600585154526-990dced4db0d?w=800&q=80",
    link: "/categorias/exterior",
  },
];
---

<SectionContainer id="categories" class="mt-4">
  <div class="categories-wrapper">
    <!-- Header simple -->
    <div class="header-section">
      <div class="header-left">
        <span class="header-label">Colecciones</span>
        <h2 class="header-title">Categorías Destacadas</h2>
      </div>
      <div class="header-right">
        <p class="header-text">
          Descubre nuestras colecciones exclusivas de muebles ecológicos
        </p>
      </div>
    </div>

    <!-- Grid simple de categorías -->
    <div class="categories-grid">
      {
        categories.map((category) => (
          <a href={category.link} class="category-card">
            <div class="card-image">
              <img
                src={category.image}
                alt={category.name}
                loading="lazy"
              />
            </div>
            <div class="card-content">
              <h3 class="card-title">{category.name}</h3>
              <span class="card-link">Ver productos →</span>
            </div>
          </a>
        ))
      }
    </div>

    <!-- Link simple -->
    <div class="footer-section">
      <a href="/categorias" class="view-all-link">
        Ver todas las categorías →
      </a>
    </div>
  </div>
</SectionContainer>

<style>
  .categories-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  /* Header */
  .header-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .header-left {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .header-label {
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-light);
  }

  .header-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 400;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0;
    font-family: var(--font-primary);
  }

  .header-right {
    display: flex;
    align-items: end;
  }

  .header-text {
    font-size: clamp(1rem, 1.5vw, 1.1rem);
    line-height: 1.6;
    color: var(--color-text-light);
    margin: 0;
  }

  /* Grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  /* Cards */
  .category-card {
    display: block;
    text-decoration: none;
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
  }

  .card-image {
    aspect-ratio: 4 / 5;
    overflow: hidden;
    background: #f5f5f5;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-secondary);
    margin: 0;
    font-family: var(--font-primary);
  }

  .card-link {
    font-size: 0.9rem;
    color: var(--color-secondary-light);
  }

  /* Footer */
  .footer-section {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .view-all-link {
    display: inline-block;
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    padding: 0.75rem 2rem;
    border: 2px solid var(--color-text);
    border-radius: 4px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .categories-wrapper {
      padding: 3rem 1.5rem;
    }

    .header-section {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-bottom: 2.5rem;
    }

    .header-right {
      align-items: start;
    }

    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }
  }

  @media (max-width: 768px) {
    .categories-wrapper {
      padding: 2.5rem 1.25rem;
    }

    .header-section {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }

    .header-title {
      font-size: 1.75rem;
    }

    .header-text {
      font-size: 0.95rem;
    }

    .categories-grid {
      gap: 1rem;
      margin-bottom: 2.5rem;
    }

    .card-content {
      padding: 1rem;
    }

    .card-title {
      font-size: 1.15rem;
    }

    .card-link {
      font-size: 0.85rem;
    }

    .footer-section {
      padding-top: 1.5rem;
    }

    .view-all-link {
      font-size: 0.95rem;
      padding: 0.7rem 1.75rem;
    }
  }

  @media (max-width: 640px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .categories-wrapper {
      padding: 2rem 1rem;
    }

    .header-section {
      margin-bottom: 1.75rem;
      padding-bottom: 1.25rem;
    }

    .header-label {
      font-size: 0.8rem;
    }

    .header-title {
      font-size: 1.5rem;
    }

    .header-text {
      font-size: 0.9rem;
    }

    .categories-grid {
      gap: 0.875rem;
      margin-bottom: 2rem;
    }

    .card-content {
      padding: 0.875rem;
    }

    .card-title {
      font-size: 1.1rem;
    }

    .view-all-link {
      font-size: 0.9rem;
      padding: 0.65rem 1.5rem;
      width: 100%;
      max-width: 300px;
    }
  }
</style>