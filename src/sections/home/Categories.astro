---
import SectionContainer from "@/components/SectionContainer.astro";

const categories = [
  {
    name: "Dormitorio",
    image:
      "https://images.unsplash.com/photo-1616594039964-ae9021a400a0?w=800&q=80",
    link: "/categorias/dormitorio",
  },
  {
    name: "Montessori",
    image:
      "https://images.unsplash.com/photo-1631889993959-41b4e9c6e3c5?w=800&q=80",
    link: "/categorias/montessori",
  },
  {
    name: "Comedor",
    image:
      "https://images.unsplash.com/photo-1615874959474-d609969a20ed?w=800&q=80",
    link: "/categorias/comedor",
  },
];
---

<SectionContainer id="categories" class="mt-4">
  <div class="categories-wrapper">
    <!-- Header simple -->
    <div class="header-section">
      <div class="header-left">
        <span class="header-label">Colecciones</span>
        <h2 class="header-title">Categorías Destacadas</h2>
      </div>
      <div class="header-right">
        <p class="header-text">
          Descubre nuestras colecciones exclusivas de muebles ecológicos
        </p>
      </div>
    </div>

    <!-- Grid simple de categorías -->
    <div class="categories-grid">
      {
        categories.map((category) => (
          <a href={category.link} class="category-card">
            <div class="category-image-wrapper">
              <img
                src={category.image}
                alt={category.name}
                class="category-image"
                loading="lazy"
              />
              <div class="category-overlay">
                <h3 class="category-title">{category.name}</h3>
                <p class="category-subtitle">Ver productos</p>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <!-- Link simple -->
    <div class="footer-section">
      <a href="/categorias" class="view-all-link">
        Ver todas las categorías →
      </a>
    </div>
  </div>
</SectionContainer>

<style>
  .categories-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  /* Header */
  .header-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .header-left {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .header-label {
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-light);
  }

  .header-title {
    font-size: var(--fs-xl);
    font-weight: 400;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0;
    font-family: var(--font-primary);
  }

  .header-right {
    display: flex;
    align-items: end;
  }

  .header-text {
    font-size: clamp(1rem, 1.5vw, 1.1rem);
    line-height: 1.6;
    color: var(--color-text-light);
    margin: 0;
  }

  /* Grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  /* Cards */
  .category-card {
    position: relative;
    display: block;
    text-decoration: none;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 3 / 4;
    background-color: #f5f5f5;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .category-image-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease-out;
  }

  .category-card:hover .category-image {
    transform: scale(1.1);
  }

  .category-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.1) 100%
    );
    color: white;
    z-index: 2;
    pointer-events: none;
  }

  .category-title {
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    font-family: var(--font-primary);
    font-weight: 500;
    margin: 0 0 0.5rem 0;
    letter-spacing: 0.02em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.4);
  }

  .category-subtitle {
    font-size: clamp(0.9rem, 1.2vw, 1rem);
    margin: 0;
    opacity: 0.95;
    font-weight: 400;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    border-bottom: 1px solid #fff;
    padding-bottom: 0.25rem;
  }

  /* Footer */
  .footer-section {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    padding: 0.875rem 2rem;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-full);
    transition: all var(--transition-base);
    background: transparent;
  }

  .view-all-link:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    background: var(--color-primary-subtle);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .categories-wrapper {
      padding: 3rem 1.5rem;
    }

    .header-section {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-bottom: 2.5rem;
    }

    .header-right {
      align-items: start;
    }

    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .categories-wrapper {
      padding: 2.5rem 1.25rem;
    }

    .header-section {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }

    .header-title {
      font-size: 1.75rem;
    }

    .header-text {
      font-size: 0.95rem;
    }

    .categories-grid {
      gap: 1rem;
      margin-bottom: 2.5rem;
    }

    .category-overlay {
      padding: 1.5rem 1rem;
    }

    .footer-section {
      padding-top: 1.5rem;
    }

    .view-all-link {
      font-size: 0.95rem;
      padding: 0.7rem 1.75rem;
    }
  }

  @media (max-width: 640px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .categories-wrapper {
      padding: 2rem 1rem;
    }

    .header-section {
      margin-bottom: 1.75rem;
      padding-bottom: 1.25rem;
    }

    .header-label {
      font-size: 0.8rem;
    }

    .header-title {
      font-size: 1.5rem;
    }

    .header-text {
      font-size: 0.9rem;
    }

    .categories-grid {
      gap: 0.875rem;
      margin-bottom: 2rem;
    }

    .category-overlay {
      padding: 1.25rem 0.875rem;
    }

    .view-all-link {
      font-size: 0.9rem;
      padding: 0.65rem 1.5rem;
      width: 100%;
      max-width: 300px;
    }
  }
</style>