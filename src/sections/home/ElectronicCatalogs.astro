---
import SectionContainer from "@/components/SectionContainer.astro";
---

<SectionContainer id="electronic-catalogs" class="mt-4">
  <div class="catalogs-container">
    <div class="section-header">
      <h2 class="section-title">Catálogos electrónicos de Perú Compras</h2>
      <p class="section-description">
        Somos proveedores certificados en los catálogos electrónicos de Perú
        Compras, garantizando calidad y confiabilidad en nuestros productos y
        servicios.
      </p>
    </div>

    <div class="gallery">
      <div class="gallery-item">
        <div class="image-wrapper">
          <span class="badge">EXT-CE-2024-26</span>
          <img
            src="/favicon.svg"
            alt="Habitación infantil con muebles LUFE"
            loading="lazy"
          />
          <div class="catalog-overlay">
            <p class="catalog-title">
              Máquinas, equipo y herramientas para jardinería, silvicultura y
              agricultura
            </p>
          </div>
        </div>
      </div>

      <div class="gallery-item">
        <div class="image-wrapper">
          <span class="badge">EXT-CE-2024-23</span>
          <img
            src="/favicon.svg"
            alt="Habitación con escritorio y estanterías LUFE"
            loading="lazy"
          />
          <div class="catalog-overlay">
            <p class="catalog-title">
              Mobiliario y equipamiento educativo institucional
            </p>
          </div>
        </div>
      </div>

      <div class="gallery-item">
        <div class="image-wrapper">
          <span class="badge">EXT-CE-2024-21</span>
          <img
            src="/favicon.svg"
            alt="Dormitorio infantil con escritorio verde"
            loading="lazy"
          />
          <div class="catalog-overlay">
            <p class="catalog-title">Equipos y accesorios de oficina</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<style>
  .catalogs-container {
    padding-bottom: 3rem;
  }
  .section-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-label {
    display: inline-block;
    font-size: var(--fs-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }

  .section-title {
    font-size: var(--fs-3xl);
    font-weight: 450;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0 0 var(--space-sm) 0;
    font-family: var(--font-primary);
  }

  .section-description {
    font-size: var(--fs-md);
    color: var(--color-text-light);
    line-height: 1.6;
    max-width: 100ch;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
  }

  .gallery-item {
    display: flex;
    flex-direction: column;
  }

  .image-wrapper {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    border-radius: var(--radius-lg);
    background: var(--color-bg-soft);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .gallery-item:hover .image-wrapper {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-card-hover), var(--shadow-glow);
    transform: translateY(-4px);
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform var(--transition-slow);
  }

  .gallery-item:hover .image-wrapper img {
    transform: scale(1.05);
  }

  .badge {
    position: absolute;
    top: var(--space-sm);
    left: var(--space-sm);
    background: var(--color-primary);
    color: white;
    font-size: var(--fs-xs);
    font-weight: 600;
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-sm);
    z-index: 2;
    letter-spacing: 0.02em;
  }

  .catalog-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(
      to top,
      rgba(3, 7, 18, 0.9) 0%,
      rgba(3, 7, 18, 0.6) 60%,
      transparent 100%
    );
    padding: var(--space-xl) var(--space-md) var(--space-md);
    z-index: 1;
  }

  .catalog-title {
    color: var(--color-text);
    font-family: var(--font-primary);
    font-size: var(--fs-sm);
    line-height: 1.5;
    margin: 0;
    font-weight: 500;
  }

  @media (max-width: 1024px) {
    .gallery {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-sm);
    }

    .gallery-item:last-child {
      grid-column: span 2;
    }

    .gallery-item:last-child .image-wrapper {
      aspect-ratio: 16 / 9;
    }
  }

  @media (max-width: 768px) {
    .section-header {
      margin-bottom: var(--space-lg);
    }

    .gallery {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .gallery-item:last-child {
      grid-column: span 1;
    }

    .gallery-item .image-wrapper,
    .gallery-item:last-child .image-wrapper {
      aspect-ratio: 4 / 3;
      min-height: 280px;
    }
  }

  @media (max-width: 480px) {
    .catalog-overlay {
      padding: var(--space-lg) var(--space-sm) var(--space-sm);
    }
  }
</style>
