---
import SectionContainer from "@/components/SectionContainer.astro";

const slides = [
  {
    id: 1,
    image:
      "https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?w=1920&q=80",
  },
  {
    id: 2,
    image:
      "https://images.unsplash.com/photo-1555041469-a586c61ea9bc?w=1920&q=80",
  },
  {
    id: 3,
    image:
      "https://images.unsplash.com/photo-1540574163026-643ea20ade25?w=1920&q=80",
  },
];

const heroContent = {
  title: "LIBE&AIKA",
  subtitle: "Nuevas mesitas de noche.",
  description: "Solo diseñamos y fabricamos muebles de madera ecológica",
  buttonText: "DESCÚBRELAS",
};
---

<SectionContainer id="hero" class="full-width">
  <div class="hero-wrapper">
    <!-- Background carousel -->
    <div class="hero-background">
      <div class="carousel-container">
        {
          slides.map((slide, index) => (
            <div
              class={`slide ${index === 0 ? "active" : ""}`}
              data-slide={index}
            >
              <img
                src={slide.image}
                alt={`Slide ${index + 1}`}
                loading={index === 0 ? "eager" : "lazy"}
              />
              <div class="slide-overlay" />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Content overlay -->
    <div class="hero-content">
      <div class="content-container">
        <!-- Badge superior -->
        <div class="hero-badge">
          <span class="badge-text">{heroContent.description}</span>
        </div>

        <!-- Título principal -->
        <h1 class="hero-title">{heroContent.title}</h1>

        <!-- Subtítulo -->
        <h2 class="hero-subtitle">{heroContent.subtitle}</h2>

        <!-- CTA Button -->
        <button class="cta-button">
          <span>{heroContent.buttonText}</span>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path
              d="M5 12H19M19 12L12 5M19 12L12 19"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </button>

        <!-- Scroll indicator -->
        <div class="scroll-indicator">
          <div class="scroll-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path
                d="M12 5V19M12 19L19 12M12 19L5 12"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </div>
          <span class="scroll-text">Desliza para explorar</span>
        </div>
      </div>

      <!-- Carousel controls -->
      <div class="carousel-controls">
        <div class="controls-container">
          <button class="control-btn prev-btn" aria-label="Anterior">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path
                d="M15 18L9 12L15 6"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </button>

          <div class="slide-indicators">
            {
              slides.map((_, index) => (
                <button
                  class={`indicator ${index === 0 ? "active" : ""}`}
                  data-index={index}
                  aria-label={`Ir al slide ${index + 1}`}
                >
                  <span class="indicator-number">0{index + 1}</span>
                </button>
              ))
            }
          </div>

          <button class="control-btn next-btn" aria-label="Siguiente">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path
                d="M9 18L15 12L9 6"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<style>
  .hero-wrapper {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
    background: #000;
  }

  /* Background Carousel */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .carousel-container {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    visibility: hidden;
    transition: opacity 1s ease, visibility 1s ease;
  }

  .slide.active {
    opacity: 1;
    visibility: visible;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slide-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.6) 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  /* Content Overlay */
  .hero-content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .content-container {
    max-width: 900px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    animation: fadeInDown 1s ease 0.2s both;
  }

  .badge-text {
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: white;
  }

  /* Title */
  .hero-title {
    font-size: clamp(3.5rem, 8vw, 7rem);
    font-weight: 700;
    line-height: 1;
    color: white;
    margin: 0;
    font-family: var(--font-primary);
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    animation: fadeInUp 1s ease 0.4s both;
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 300;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    font-family: var(--font-primary);
    animation: fadeInUp 1s ease 0.6s both;
  }

  /* CTA Button */
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.25rem 3rem;
    background: white;
    color: #000;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 1s ease 0.8s both;
  }

  .cta-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.4);
    gap: 1rem;
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: fadeIn 1s ease 1s both;
  }

  .scroll-arrow {
    width: 40px;
    height: 40px;
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    animation: bounce 2s infinite;
  }

  .scroll-text {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Carousel Controls */
  .carousel-controls {
    position: absolute;
    bottom: 3rem;
    right: 3rem;
    animation: fadeIn 1s ease 1s both;
  }

  .controls-container {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
  }

  .control-btn {
    width: 40px;
    height: 40px;
    border: none;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .control-btn:hover {
    background: white;
    color: #000;
  }

  .slide-indicators {
    display: flex;
    gap: 0.75rem;
  }

  .indicator {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    transition: all 0.3s ease;
  }

  .indicator-number {
    font-size: 0.9rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.5);
    transition: color 0.3s ease;
  }

  .indicator.active .indicator-number,
  .indicator:hover .indicator-number {
    color: white;
  }

  /* Animations */
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-wrapper {
      min-height: 500px;
    }

    .carousel-controls {
      bottom: 2rem;
      right: 2rem;
    }

    .scroll-indicator {
      bottom: 2rem;
    }
  }

  @media (max-width: 768px) {
    .hero-wrapper {
      height: 100vh;
      min-height: 550px;
    }

    .hero-content {
      padding: 1.5rem;
    }

    .content-container {
      gap: 1.5rem;
    }

    .hero-badge {
      padding: 0.65rem 1.25rem;
    }

    .badge-text {
      font-size: 0.8rem;
    }

    .hero-title {
      font-size: clamp(2.5rem, 10vw, 4rem);
    }

    .hero-subtitle {
      font-size: clamp(1.25rem, 5vw, 2rem);
    }

    .cta-button {
      padding: 1.1rem 2.5rem;
      font-size: 0.9rem;
    }

    .carousel-controls {
      bottom: 1.5rem;
      right: 1.5rem;
    }

    .controls-container {
      padding: 0.75rem 1.25rem;
      gap: 1rem;
    }

    .control-btn {
      width: 36px;
      height: 36px;
    }

    .control-btn svg {
      width: 20px;
      height: 20px;
    }

    .scroll-indicator {
      bottom: 1.5rem;
    }

    .scroll-arrow {
      width: 36px;
      height: 36px;
    }

    .scroll-text {
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .hero-wrapper {
      min-height: 500px;
    }

    .hero-content {
      padding: 1rem;
    }

    .content-container {
      gap: 1.25rem;
    }

    .hero-badge {
      padding: 0.6rem 1rem;
    }

    .badge-text {
      font-size: 0.75rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .cta-button {
      padding: 1rem 2rem;
      font-size: 0.85rem;
      width: 100%;
      max-width: 300px;
    }

    .carousel-controls {
      bottom: 1rem;
      right: 1rem;
      left: 1rem;
    }

    .controls-container {
      padding: 0.65rem 1rem;
      gap: 0.75rem;
      width: 100%;
      justify-content: space-between;
    }

    .control-btn {
      width: 32px;
      height: 32px;
    }

    .indicator-number {
      font-size: 0.8rem;
    }

    .scroll-indicator {
      display: none;
    }
  }
</style>

<script>
  class HeroCarousel {
    private container: HTMLElement;
    private slides: NodeListOf<HTMLElement>;
    private indicators: NodeListOf<HTMLButtonElement>;
    private prevBtn: HTMLButtonElement | null;
    private nextBtn: HTMLButtonElement | null;
    private currentIndex: number = 0;
    private autoPlayInterval: number | null = null;
    private isTransitioning: boolean = false;

    constructor(container: HTMLElement) {
      this.container = container;
      this.slides = container.querySelectorAll(".slide");
      this.indicators = container.querySelectorAll(".indicator");
      this.prevBtn = container.querySelector(".prev-btn");
      this.nextBtn = container.querySelector(".next-btn");

      this.init();
    }

    private init(): void {
      this.indicators.forEach((indicator, index) => {
        indicator.addEventListener("click", () => this.goToSlide(index));
      });

      this.prevBtn?.addEventListener("click", () => this.prev());
      this.nextBtn?.addEventListener("click", () => this.next());

      this.container.addEventListener("mouseenter", () => this.pauseAutoPlay());
      this.container.addEventListener("mouseleave", () => this.startAutoPlay());

      document.addEventListener("visibilitychange", () => {
        if (document.hidden) {
          this.pauseAutoPlay();
        } else {
          this.startAutoPlay();
        }
      });

      this.startAutoPlay();
    }

    private goToSlide(index: number): void {
      if (this.isTransitioning || index === this.currentIndex) return;

      this.isTransitioning = true;

      this.slides[this.currentIndex].classList.remove("active");
      this.indicators[this.currentIndex].classList.remove("active");

      this.currentIndex = index;

      this.slides[this.currentIndex].classList.add("active");
      this.indicators[this.currentIndex].classList.add("active");

      setTimeout(() => {
        this.isTransitioning = false;
      }, 1000);

      this.resetAutoPlay();
    }

    private next(): void {
      const nextIndex = (this.currentIndex + 1) % this.slides.length;
      this.goToSlide(nextIndex);
    }

    private prev(): void {
      const prevIndex =
        (this.currentIndex - 1 + this.slides.length) % this.slides.length;
      this.goToSlide(prevIndex);
    }

    private startAutoPlay(): void {
      this.pauseAutoPlay();
      this.autoPlayInterval = window.setInterval(() => {
        this.next();
      }, 5000);
    }

    private pauseAutoPlay(): void {
      if (this.autoPlayInterval) {
        clearInterval(this.autoPlayInterval);
        this.autoPlayInterval = null;
      }
    }

    private resetAutoPlay(): void {
      this.startAutoPlay();
    }
  }

  document.addEventListener("astro:page-load", () => {
    const heroWrapper = document.querySelector(".hero-wrapper");
    if (heroWrapper) {
      new HeroCarousel(heroWrapper as HTMLElement);
    }
  });
</script>