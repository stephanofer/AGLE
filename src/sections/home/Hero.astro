---
import SectionContainer from "@/components/SectionContainer.astro";

const slides = [
  {
    id: 1,
    image:
      "https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?w=1920&q=80",
  },
  {
    id: 2,
    image:
      "https://images.unsplash.com/photo-1555041469-a586c61ea9bc?w=1920&q=80",
  },
  {
    id: 3,
    image:
      "https://images.unsplash.com/photo-1540574163026-643ea20ade25?w=1920&q=80",
  },
];

const heroContent = {
  title: "LIBE&AIKA",
  subtitle: "Nuevas mesitas de noche.",
  description: "Solo dise침amos y fabricamos muebles de madera ecol칩gica",
  buttonText: "DESC칔BRELAS",
};
---

<SectionContainer id="hero" class="full-width">
  <div class="hero-container">
    <!-- Carrusel a la izquierda -->
    <div class="hero-carousel">
      <div class="carousel-wrapper">
        {
          slides.map((slide, index) => (
            <div
              class={`carousel-slide ${index === 0 ? "active" : ""}`}
              data-slide={index}
            >
              <img
                src={slide.image}
                alt={`Slide ${index + 1}`}
                loading={index === 0 ? "eager" : "lazy"}
              />
            </div>
          ))
        }
      </div>

      <div class="carousel-indicators">
        {
          slides.map((_, index) => (
            <button
              class={`indicator ${index === 0 ? "active" : ""}`}
              data-index={index}
              aria-label={`Ir al slide ${index + 1}`}
            />
          ))
        }
      </div>
    </div>

    <!-- Contenido de texto a la derecha -->
    <div class="hero-content">
      <div class="content-wrapper">
        <p class="hero-description">{heroContent.description}</p>
        <h1 class="hero-title">{heroContent.title}</h1>
        <h2 class="hero-subtitle">{heroContent.subtitle}</h2>
        <button class="cta-button">{heroContent.buttonText}</button>
      </div>
    </div>
  </div>
</SectionContainer>

<style>
  .hero-container {
    display: flex;
    width: 100%;
    height: calc(100vh - 64px);
    background: var(--color-bg);
  }

  /* === CARRUSEL (IZQUIERDA) === */
  .hero-carousel {
    flex: 1.4;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 500px;
  }

  .carousel-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.8s ease,
      visibility 0.8s ease;
  }

  .carousel-slide.active {
    opacity: 1;
    visibility: visible;
  }

  .carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: brightness(70%) contrast(1.1);
    display: block;
  }

  .carousel-indicators {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.6rem;
    z-index: 10;
  }

  .indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid white;
    background: rgba(255, 255, 255, 0.25);
    cursor: pointer;
    transition: all 0.25s ease;
  }

  .indicator:hover {
    background: rgba(255, 255, 255, 0.5);
  }

  .indicator.active {
    background: #1ec8ff;
    border-color: #1ec8ff;
    transform: scale(1.3);
  }

  /* === CONTENIDO DE TEXTO (DERECHA) === */
  .hero-content {
    flex: 0.6;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 5%;
  }

  .content-wrapper {
    max-width: 540px;
    color: white;
  }

  .hero-description {
    font-size: 1rem;
    opacity: 0.85;
    letter-spacing: 0.04em;
    margin-bottom: 0.7rem;
    text-transform: uppercase;
    color: var(--color-primary-light);
  }

  .hero-title {
    font-size: clamp(3rem, 6vw, 4.5rem);
    font-weight: 400;
    line-height: 1.05;
    text-shadow: 0 0 12px rgba(0, 150, 255, 0.3);
    margin-bottom: 0.3rem;
    font-family: var(--font-primary);
  }

  .hero-subtitle {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-weight: 300;
    color: #1ec8ff;
    margin-bottom: 2rem;
  }

  .cta-button {
    background: linear-gradient(90deg, #00a6ff, #13d0ff);
    padding: 1rem 3rem;
    border-radius: 6px;
    font-weight: 700;
    border: none;
    cursor: pointer;
    color: white;
    text-transform: uppercase;
    box-shadow: 0 0 15px rgba(0, 150, 255, 0.5);
    transition: all 0.3s ease;
    font-size: 0.95rem;
    letter-spacing: 0.05em;
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 28px rgba(0, 150, 255, 0.85);
  }

  .cta-button:active {
    transform: translateY(-1px);
  }

  /* === RESPONSIVE === */

  /* Tablets (iPad) - Layout vertical */
  @media (max-width: 1024px) {
    .hero-container {
      flex-direction: column-reverse; /* TEXTO ARRIBA */
      min-height: 100vh; /* Mantiene pantalla completa */
    }

    .hero-content {
      flex: 0.3; /* 游녣 MISMO ESPACIO PARA AMBOS */
      width: 100%;
      min-height: auto;
    }

    .hero-carousel {
      flex: 1.7; /* 游녣 MISMO ESPACIO PARA AMBOS */
      width: 100%;
      min-height: auto;
    }

    .hero-carousel {
      height: auto; /* Ya no forzamos 55vh */
    }

    .hero-content {
      padding: 3rem 6%;
      background-color: var(--color-bg);
    }

    .content-wrapper {
      max-width: 100%;
      text-align: center;
    }

    .carousel-indicators {
      bottom: 1.5rem;
    }
  }

  /* M칩viles */
  @media (max-width: 768px) {
    .hero-carousel {
    }

    .hero-content {
      padding: 2.5rem 5%;
    }

    .hero-title {
      font-size: clamp(2.2rem, 8vw, 3rem);
    }

    .hero-subtitle {
      font-size: clamp(1.4rem, 5vw, 1.8rem);
      margin-bottom: 1.5rem;
    }

    .hero-description {
      font-size: 0.9rem;
    }

    .cta-button {
      padding: 0.9rem 2.5rem;
      font-size: 0.9rem;
      width: 100%;
      max-width: 300px;
    }
  }

  /* M칩viles peque침os */
  @media (max-width: 480px) {
    .hero-carousel {
      height: 45vh;
      min-height: 320px;
    }

    .hero-content {
      padding: 2rem 5%;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.3rem;
    }

    .cta-button {
      padding: 0.85rem 2rem;
    }

    .carousel-indicators {
      bottom: 1rem;
      gap: 0.5rem;
    }

    .indicator {
      width: 10px;
      height: 10px;
    }
  }
</style>

<script>
  class HeroCarousel {
    private container: HTMLElement;
    private slides: NodeListOf<HTMLElement>;
    private indicators: NodeListOf<HTMLButtonElement>;
    private currentIndex: number = 0;
    private autoPlayInterval: number | null = null;
    private isTransitioning: boolean = false;
    private touchStartX: number = 0;
    private touchEndX: number = 0;

    constructor(container: HTMLElement) {
      this.container = container;
      this.slides = container.querySelectorAll(".carousel-slide");
      this.indicators = container.querySelectorAll(".indicator");

      this.init();
    }

    private init(): void {
      this.indicators.forEach((indicator, index) => {
        indicator.addEventListener("click", () => this.goToSlide(index));
      });

      this.container.addEventListener(
        "touchstart",
        (e) => this.handleTouchStart(e),
        { passive: true },
      );

      this.container.addEventListener(
        "touchend",
        (e) => this.handleTouchEnd(e),
        { passive: true },
      );

      this.container.addEventListener("mouseenter", () => this.pauseAutoPlay());
      this.container.addEventListener("mouseleave", () => this.startAutoPlay());

      document.addEventListener("visibilitychange", () => {
        if (document.hidden) {
          this.pauseAutoPlay();
        } else {
          this.startAutoPlay();
        }
      });

      this.startAutoPlay();
    }

    private handleTouchStart(e: TouchEvent): void {
      this.touchStartX = e.changedTouches[0].screenX;
    }

    private handleTouchEnd(e: TouchEvent): void {
      this.touchEndX = e.changedTouches[0].screenX;
      this.handleSwipe();
    }

    private handleSwipe(): void {
      const swipeThreshold = 50;
      const diff = this.touchStartX - this.touchEndX;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          this.next();
        } else {
          this.prev();
        }
      }
    }

    private goToSlide(index: number): void {
      if (this.isTransitioning || index === this.currentIndex) return;

      this.isTransitioning = true;

      this.slides[this.currentIndex].classList.remove("active");
      this.indicators[this.currentIndex].classList.remove("active");

      this.currentIndex = index;

      this.slides[this.currentIndex].classList.add("active");
      this.indicators[this.currentIndex].classList.add("active");

      setTimeout(() => {
        this.isTransitioning = false;
      }, 800);

      this.resetAutoPlay();
    }

    private next(): void {
      const nextIndex = (this.currentIndex + 1) % this.slides.length;
      this.goToSlide(nextIndex);
    }

    private prev(): void {
      const prevIndex =
        (this.currentIndex - 1 + this.slides.length) % this.slides.length;
      this.goToSlide(prevIndex);
    }

    private startAutoPlay(): void {
      this.pauseAutoPlay();
      this.autoPlayInterval = window.setInterval(() => {
        this.next();
      }, 5000);
    }

    private pauseAutoPlay(): void {
      if (this.autoPlayInterval) {
        clearInterval(this.autoPlayInterval);
        this.autoPlayInterval = null;
      }
    }

    private resetAutoPlay(): void {
      this.startAutoPlay();
    }
  }

  document.addEventListener("astro:page-load", () => {
    const carouselElement = document.querySelector(".hero-carousel");
    if (carouselElement) {
      new HeroCarousel(carouselElement as HTMLElement);
    }
  });
</script>
