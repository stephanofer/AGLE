---
import SectionContainer from "@/components/SectionContainer.astro";

const slides = [
  {
    id: 1,
    image:
      "https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?w=1920&q=80",
  },
  {
    id: 2,
    image:
      "https://images.unsplash.com/photo-1555041469-a586c61ea9bc?w=1920&q=80",
  },
  {
    id: 3,
    image:
      "https://images.unsplash.com/photo-1540574163026-643ea20ade25?w=1920&q=80",
  },
  {
    id: 4,
    image:
      "https://images.unsplash.com/photo-1540574163026-643ea20ade25?w=1920&q=80",
  },
];

const heroContent = {
  title: "LIBE&AIKA",
  subtitle: "Nuevas mesitas de noche.",
  description: "Solo diseñamos y fabricamos muebles ",
  buttonText: "DESCÚBRELAS",
};
---

<SectionContainer id="hero" class="full-width">
  <div class="hero-wrapper">
    <!-- Background carousel -->
    <div class="hero-background">
      <div class="carousel-container">
        {
          slides.map((slide, index) => (
            <div
              class={`slide ${index === 0 ? "active" : ""}`}
              data-slide={index}
            >
              <img
                src={slide.image}
                alt={`Slide ${index + 1}`}
                loading={index === 0 ? "eager" : "lazy"}
              />
              <div class="slide-overlay" />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Content overlay -->
    <div class="hero-content">
      <div class="content-container">
        <!-- Badge superior -->
        <div class="hero-badge">
          <span class="badge-text">{heroContent.description}</span>
        </div>

        <!-- Título principal -->
        <h1 class="hero-title">{heroContent.title}</h1>

        <!-- Subtítulo -->
        <h2 class="hero-subtitle">{heroContent.subtitle}</h2>

        <!-- CTA Button -->
        <button class="cta-button">
          <span>{heroContent.buttonText}</span>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path
              d="M5 12H19M19 12L12 5M19 12L12 19"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </button>

        <!-- Scroll indicator -->
        <div class="scroll-indicator">
          <div class="scroll-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path
                d="M12 5V19M12 19L19 12M12 19L5 12"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </div>
          <span class="scroll-text">Desliza para explorar</span>
        </div>
      </div>

      <!-- Carousel controls -->
      <div class="carousel-controls">
        <div class="controls-container">
          <button class="control-btn prev-btn" aria-label="Anterior">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path
                d="M15 18L9 12L15 6"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </button>

          <div class="slide-indicators">
            {
              slides.map((_, index) => (
                <button
                  class={`indicator ${index === 0 ? "active" : ""}`}
                  data-index={index}
                  aria-label={`Ir al slide ${index + 1}`}
                >
                  <span class="indicator-number">0{index + 1}</span>
                </button>
              ))
            }
          </div>

          <button class="control-btn next-btn" aria-label="Siguiente">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path
                d="M9 18L15 12L9 6"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<style>
  .hero-wrapper {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    max-height: 900px;
    overflow: hidden;
    background: var(--color-bg);
  }

  /* Background Carousel */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .carousel-container {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.8s var(--transition-smooth), visibility 0.8s var(--transition-smooth);
  }

  .slide.active {
    opacity: 1;
    visibility: visible;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slide-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(3, 7, 18, 0.4) 0%,
      rgba(3, 7, 18, 0.6) 50%,
      rgba(3, 7, 18, 0.85) 100%
    );
  }

  /* Content Overlay */
  .hero-content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: var(--space-lg);
  }

  .content-container {
    max-width: 900px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    padding: 0.625rem 1.25rem;
    background: rgba(59, 130, 246, 0.15);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: var(--radius-full);
    animation: fadeInDown 0.6s var(--transition-smooth) 0.2s both;
  }

  .badge-text {
    font-size: var(--fs-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-primary-light);
  }

  /* Title */
  .hero-title {
    font-size: var(--fs-hero);
    font-weight: 500;
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--color-text);
    margin: 0;
    font-family: var(--font-primary);
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
    animation: fadeInUp 0.6s var(--transition-smooth) 0.3s both;
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: var(--fs-lg);
    font-weight: 400;
    color: var(--color-text-light);
    margin: 0;
    font-family: var(--font-secondary);
    animation: fadeInUp 0.6s var(--transition-smooth) 0.4s both;
  }

  /* CTA Button */
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2.5rem;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--radius-full);
    font-size: var(--fs-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);
    animation: fadeInUp 0.6s var(--transition-smooth) 0.5s both;
  }

  .cta-button:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(59, 130, 246, 0.5);
  }

  .cta-button svg {
    transition: transform var(--transition-base);
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: fadeIn 0.6s var(--transition-smooth) 0.8s both;
  }

  .scroll-arrow {
    width: 36px;
    height: 36px;
    border: 1.5px solid rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.7);
    animation: gentleBounce 2.5s ease-in-out infinite;
  }

  .scroll-text {
    font-size: var(--fs-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.5);
  }

  /* Carousel Controls */
  .carousel-controls {
    position: absolute;
    bottom: var(--space-xl);
    right: var(--space-xl);
    z-index: 10;
    animation: fadeIn 0.6s var(--transition-smooth) 0.8s both;
  }

  .controls-container {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
    background: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
  }

  .control-btn {
    width: 32px;
    height: 32px;
    border: none;
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }

  .control-btn:hover {
    background: var(--color-primary);
    color: white;
  }

  .control-btn svg {
    width: 18px;
    height: 18px;
  }

  .slide-indicators {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .indicator {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.25rem 0.5rem;
    transition: all var(--transition-fast);
  }

  .indicator-number {
    font-size: 0.75rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.4);
    transition: color var(--transition-fast);
  }

  .indicator.active .indicator-number {
    color: var(--color-primary);
  }
  
  .indicator:hover .indicator-number {
    color: white;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-wrapper {
      min-height: 550px;
      max-height: 800px;
    }

    .carousel-controls {
      bottom: var(--space-lg);
      right: var(--space-lg);
    }

    .scroll-indicator {
      bottom: var(--space-lg);
    }
  }

  @media (max-width: 768px) {
    .hero-wrapper {
      height: 100svh;
      min-height: 500px;
      max-height: none;
    }

    .hero-content {
      padding: var(--space-md);
    }

    .content-container {
      gap: var(--space-md);
    }

    .hero-badge {
      padding: 0.5rem 1rem;
    }

    .cta-button {
      padding: 0.875rem 2rem;
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .carousel-controls {
      bottom: var(--space-md);
      right: 50%;
      left: auto;
      transform: translateX(50%);
    }

    .controls-container {
      justify-content: center;
      padding: 0.5rem 0.875rem;
      gap: 0.5rem;
    }

    .control-btn {
      width: 28px;
      height: 28px;
    }
    
    .control-btn svg {
      width: 16px;
      height: 16px;
    }

    .scroll-indicator {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .hero-wrapper {
      min-height: 450px;
    }

    .hero-content {
      padding: var(--space-sm);
    }

    .content-container {
      gap: var(--space-sm);
    }

    .hero-badge {
      padding: 0.4rem 0.875rem;
    }

    .badge-text {
      font-size: 0.7rem;
    }

    .cta-button {
      padding: 0.75rem 1.5rem;
      font-size: 0.8rem;
    }

    .controls-container {
      padding: 0.4rem 0.625rem;
      gap: 0.375rem;
    }

    .control-btn {
      width: 26px;
      height: 26px;
    }
    
    .control-btn svg {
      width: 14px;
      height: 14px;
    }

    .indicator-number {
      font-size: 0.65rem;
    }
    
    .indicator {
      padding: 0.125rem 0.375rem;
    }
  }
</style>

<script>
  class HeroCarousel {
    private container: HTMLElement;
    private slides: NodeListOf<HTMLElement>;
    private indicators: NodeListOf<HTMLButtonElement>;
    private prevBtn: HTMLButtonElement | null;
    private nextBtn: HTMLButtonElement | null;
    private currentIndex: number = 0;
    private autoPlayInterval: number | null = null;
    private isTransitioning: boolean = false;

    constructor(container: HTMLElement) {
      this.container = container;
      this.slides = container.querySelectorAll(".slide");
      this.indicators = container.querySelectorAll(".indicator");
      this.prevBtn = container.querySelector(".prev-btn");
      this.nextBtn = container.querySelector(".next-btn");

      this.init();
    }

    private init(): void {
      this.indicators.forEach((indicator, index) => {
        indicator.addEventListener("click", () => this.goToSlide(index));
      });

      this.prevBtn?.addEventListener("click", () => this.prev());
      this.nextBtn?.addEventListener("click", () => this.next());

      this.container.addEventListener("mouseenter", () => this.pauseAutoPlay());
      this.container.addEventListener("mouseleave", () => this.startAutoPlay());

      document.addEventListener("visibilitychange", () => {
        if (document.hidden) {
          this.pauseAutoPlay();
        } else {
          this.startAutoPlay();
        }
      });

      this.startAutoPlay();
    }

    private goToSlide(index: number): void {
      if (this.isTransitioning || index === this.currentIndex) return;

      this.isTransitioning = true;

      this.slides[this.currentIndex].classList.remove("active");
      this.indicators[this.currentIndex].classList.remove("active");

      this.currentIndex = index;

      this.slides[this.currentIndex].classList.add("active");
      this.indicators[this.currentIndex].classList.add("active");

      setTimeout(() => {
        this.isTransitioning = false;
      }, 1000);

      this.resetAutoPlay();
    }

    private next(): void {
      const nextIndex = (this.currentIndex + 1) % this.slides.length;
      this.goToSlide(nextIndex);
    }

    private prev(): void {
      const prevIndex =
        (this.currentIndex - 1 + this.slides.length) % this.slides.length;
      this.goToSlide(prevIndex);
    }

    private startAutoPlay(): void {
      this.pauseAutoPlay();
      this.autoPlayInterval = window.setInterval(() => {
        this.next();
      }, 5000);
    }

    private pauseAutoPlay(): void {
      if (this.autoPlayInterval) {
        clearInterval(this.autoPlayInterval);
        this.autoPlayInterval = null;
      }
    }

    private resetAutoPlay(): void {
      this.startAutoPlay();
    }
  }

  document.addEventListener("astro:page-load", () => {
    const heroWrapper = document.querySelector(".hero-wrapper");
    if (heroWrapper) {
      new HeroCarousel(heroWrapper as HTMLElement);
    }
  });
</script>