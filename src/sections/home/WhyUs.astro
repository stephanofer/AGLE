---
import SectionContainer from "@/components/SectionContainer.astro";
---

<SectionContainer id="why-us" class="mt-4">
  <div class="why-us-wrapper">
    <!-- Hero simple y directo -->
    <div class="section-intro">
      <h2 class="intro-title">¿Por qué elegirnos?</h2>
      <p class="intro-text">
        Comprometidos con la calidad, sostenibilidad y tu satisfacción
      </p>
    </div>

    <!-- Grid limpio y equilibrado -->
    <div class="features-grid">
      <div class="feature-card">
        <div class="card-number">01</div>
        <div class="card-icon">
          <svg
            width="48"
            height="48"
            viewBox="0 0 48 48"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
